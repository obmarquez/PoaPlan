@model AvanceActividad
@{
    ViewData["Title"] = "NuevoAvanceActividad";

    #region deshabilitado

    DateTime thisDate = DateTime.Today;
    DateTime dateEnero = new DateTime(2022, 2, 7, 0, 0, 0);
    DateTime dateFebrero = new DateTime(2022, 3, 7, 0, 0, 0);
    DateTime dateMarzo = new DateTime(2022, 4, 4, 0, 0, 0);
    DateTime dateAbril = new DateTime(2022, 5, 7, 0, 0, 0);
    DateTime dateMayo = new DateTime(2022, 6, 7, 0, 0, 0);
    DateTime dateJunio = new DateTime(2022, 7, 4, 0, 0, 0);
    DateTime dateJulio = new DateTime(2022, 8, 7, 0, 0, 0);
    DateTime dateAgosto = new DateTime(2022, 9, 7, 0, 0, 0);
    DateTime dateSeptiembre = new DateTime(2022, 10, 4, 0, 0, 0);
    DateTime dateOctubre = new DateTime(2022, 11, 7, 0, 0, 0);
    DateTime dateNoviembre = new DateTime(2022, 12, 7, 0, 0, 0);
    DateTime dateDiciembre = new DateTime(2022, 12, 31, 0, 0, 0);


    string desEnero = thisDate.CompareTo(dateEnero) > 0 ? "readonly" : "";
    string desFebrero = thisDate.CompareTo(dateFebrero) > 0 ? "readonly" : "";
    string desMarzo = thisDate.CompareTo(dateMarzo) > 0 ? "readonly" : "";
    string desAbril = thisDate.CompareTo(dateAbril) > 0 ? "readonly" : "";
    string desMayo = thisDate.CompareTo(dateMayo) > 0 ? "readonly" : "";
    string desJunio = thisDate.CompareTo(dateJunio) > 0 ? "readonly" : "";
    string desJulio = thisDate.CompareTo(dateJulio) > 0 ? "readonly" : "";
    string desAgosto = thisDate.CompareTo(dateAgosto) > 0 ? "readonly" : "";
    string desSeptiembre = thisDate.CompareTo(dateSeptiembre) > 0 ? "readonly" : "";
    string desOctubre = thisDate.CompareTo(dateOctubre) > 0 ? "readonly" : "";
    string desNoviembre = thisDate.CompareTo(dateNoviembre) > 0 ? "readonly" : "";
    string desDiciembre = thisDate.CompareTo(dateDiciembre) > 0 ? "readonly" : "";
    #endregion

}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <form asp-controller="AvanceActividadEnlace" asp-action="EditarAvanceActividadEnlace" class="form-horizontal" role="form" method="post">
                <div class="ibox-title">
                    <h5>Edición del Avance de Actividad Mensual por el Enlace </h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <h3 class="m-t-none m-b">Programado</h3>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Enero</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.enero_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="enero_mod" class="badge badge-danger"></span>
                                </div>

                                <label class="col-sm-2 control-label">Febrero</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.febrero_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="febrero_mod" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Marzo</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.marzo_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="marzo_mod" class="badge badge-danger"></span>
                                </div>
                                <label class="col-sm-2 control-label">Abril</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.abril_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="abril_mod" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Mayo</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.mayo_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="mayo_mod" class="badge badge-danger"></span>
                                </div>
                                <label class="col-sm-2 control-label">Junio</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.junio_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="junio_mod" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Julio</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.julio_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="julio_mod" class="badge badge-danger"></span>
                                </div>
                                <label class="col-sm-2 control-label">Agosto</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.agosto_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="agosto_mod" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Septiembre</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.septiembre_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="septiembre_mod" class="badge badge-danger"></span>
                                </div>
                                <label class="col-sm-2 control-label">Octubre</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.octubre_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="octubre_mod" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Noviembre</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.noviembre_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="noviembre_mod" class="badge badge-danger"></span>
                                </div>
                                <label class="col-sm-2 control-label">Diciembre</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.diciembre_mod, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                                    <span asp-validation-for="diciembre_mod" class="badge badge-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h3 class="m-t-none m-b">Avance</h3>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Enero</label>
                                <div class="col-sm-4">
                                    <input type="number" id="enero_ava" name="enero_ava" class="form-control" value="@Model.enero_ava" @desEnero />
                                </div>

                                <label class="col-sm-2 control-label">Febrero</label>
                                <div class="col-sm-4">
                                    <input type="number" id="febrero_ava" name="febrero_ava" class="form-control" value="@Model.febrero_ava" @desFebrero />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Marzo</label>
                                <div class="col-sm-4">
                                    <input type="number" id="marzo_ava" name="marzo_ava" class="form-control" value="@Model.marzo_ava" @desMarzo />
                                </div>
                                <label class="col-sm-2 control-label">Abril</label>
                                <div class="col-sm-4">
                                    <input type="number" id="abril_ava" name="abril_ava" class="form-control" value="@Model.abril_ava" @desAbril />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Mayo</label>
                                <div class="col-sm-4">
                                    <input type="number" id="mayo_ava" name="mayo_ava" class="form-control" value="@Model.mayo_ava" @desMayo />
                                </div>
                                <label class="col-sm-2 control-label">Junio</label>
                                <div class="col-sm-4">
                                    <input type="number" id="junio_ava" name="junio_ava" class="form-control" value="@Model.junio_ava" @desJunio />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Julio</label>
                                <div class="col-sm-4">
                                    <input type="number" id="julio_ava" name="julio_ava" class="form-control" value="@Model.julio_ava" @desJulio />
                                </div>
                                <label class="col-sm-2 control-label">Agosto</label>
                                <div class="col-sm-4">
                                    <input type="number" id="agosto_ava" name="agosto_ava" class="form-control" value="@Model.agosto_ava" @desAgosto />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Septiembre</label>
                                <div class="col-sm-4">
                                    <input type="number" id="septiembre_ava" name="septiembre_ava" class="form-control" value="@Model.septiembre_ava" @desSeptiembre />
                                </div>
                                <label class="col-sm-2 control-label">Octubre</label>
                                <div class="col-sm-4">
                                    <input type="number" id="octubre_ava" name="octubre_ava" class="form-control" value="@Model.octubre_ava" @desOctubre />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Noviembre</label>
                                <div class="col-sm-4">
                                    <input type="number" id="noviembre_ava" name="noviembre_ava" class="form-control" value="@Model.noviembre_ava" @desNoviembre />
                                </div>
                                <label class="col-sm-2 control-label">Diciembre</label>
                                <div class="col-sm-4">
                                    <input type="number" id="diciembre_ava" name="diciembre_ava" class="form-control" value="@Model.diciembre_ava" @desDiciembre />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="row">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Total Programado</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="totalPro" name="totalPro" readonly="readonly">
                            </div>

                            <label class="col-sm-2 control-label">Total Avance</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="totalAva" name="totalAva" readonly="readonly">
                            </div>

                            <label class="col-sm-2 control-label">% Acumulado</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="totalPor" name="totalPor" readonly="readonly">
                            </div>
                        </div>

                    </div>

                </div>
                <div class="ibox-footer">
                    @Html.HiddenFor(model => model.idActividad)
                    <button class="btn btn-outline btn-success dim" type="submit"><i class="fa fa-floppy-o"></i></button>
                    <button class="btn btn-outline btn-danger dim" type="button" onclick="salir();"><i class="fa fa-sign-out"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{

    <script language="javascript">

        $(document).ready(function () {

            sumaProgramado();

            sumaAvance();

            porcentaje();

        });

        function salir() {
            location.href = '@Url.Action("Index", "AvanceActividadEnlace")';
        }

        function sumaProgramado() {

            var totalProgramado = parseInt(@Model.enero_mod) + parseInt(@Model.febrero_mod) + parseInt(@Model.marzo_mod) + parseInt(@Model.abril_mod) + parseInt(@Model.mayo_mod) + parseInt(@Model.junio_mod) + parseInt(@Model.julio_mod) + parseInt(@Model.agosto_mod) + parseInt(@Model.septiembre_mod) + parseInt(@Model.octubre_mod) + parseInt(@Model.noviembre_mod) + parseInt(@Model.diciembre_mod);

            document.getElementById("totalPro").value = totalProgramado;
        }

        function sumaAvance() {

            var totalAvance = parseInt(@Model.enero_ava) + parseInt(@Model.febrero_ava) + parseInt(@Model.marzo_ava) + parseInt(@Model.abril_ava) + parseInt(@Model.mayo_ava) + parseInt(@Model.junio_ava) + parseInt(@Model.julio_ava) + parseInt(@Model.agosto_ava) + parseInt(@Model.septiembre_ava) + parseInt(@Model.octubre_ava) + parseInt(@Model.noviembre_ava) + parseInt(@Model.diciembre_ava);

            document.getElementById("totalAva").value = totalAvance;
        }

        function porcentaje() {

            var elPor = parseFloat((parseInt(@Model.enero_ava) + parseInt(@Model.febrero_ava) + parseInt(@Model.marzo_ava) + parseInt(@Model.abril_ava) + parseInt(@Model.mayo_ava) + parseInt(@Model.junio_ava) + parseInt(@Model.julio_ava) + parseInt(@Model.agosto_ava) + parseInt(@Model.septiembre_ava) + parseInt(@Model.octubre_ava) + parseInt(@Model.noviembre_ava) + parseInt(@Model.diciembre_ava)) / (parseInt(@Model.enero_mod) + parseInt(@Model.febrero_mod) + parseInt(@Model.marzo_mod) + parseInt(@Model.abril_mod) + parseInt(@Model.mayo_mod) + parseInt(@Model.junio_mod) + parseInt(@Model.julio_mod) + parseInt(@Model.agosto_mod) + parseInt(@Model.septiembre_mod) + parseInt(@Model.octubre_mod) + parseInt(@Model.noviembre_mod) + parseInt(@Model.diciembre_mod))) * 100;

            document.getElementById("totalPor").value = elPor.toFixed(2);
        }

    </script>

}