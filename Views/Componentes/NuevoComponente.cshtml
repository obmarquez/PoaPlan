@model PoaPlan.Models.Componente

@{
    ViewData["Title"] = "NuevoComponente";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Detalle del componenete</h5>
            </div>

            <form asp-controller="Componentes" asp-action="NuevoComponente" id="myForm" role="form" accept-charset="utf-8" method="post" class="form-horizontal">

                <div class="ibox-content">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Organo</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(model => model.idArea, new SelectList(ViewBag.losOrganosAdmivos, "idarea", "organo"), new { @id = "idArea", @class = "form-control" })
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Componente</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(model => model.componente, new { @class = "form-control", @rows = 3 })
                            <span asp-validation-for="componente" class="badge badge-danger"></span>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Indicador</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(model => model.indicador, new { @class = "form-control", @rows = 3 })
                            <span asp-validation-for="indicador" class="badge badge-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="ibox-footer">
                    <button class="btn btn-outline btn-success dim" type="submit"><i class="fa fa-floppy-o"></i></button>
                    <button class="btn btn-outline btn-danger dim" type="button" onclick="salir();"><i class="fa fa-sign-out"></i></button>
                </div>

            </form>

        </div>
    </div>
</div>

@section scripts
{


<script language="javascript">

        function salir() {
            location.href = '@Url.Action("Index", "Componentes")';
        }

</script>

}