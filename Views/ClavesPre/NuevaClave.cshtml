@model ClavePresupuestaria

@{
    ViewData["Title"] = "NuevaClave";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Detalle de la clave presupuestaria</h5>
            </div>

            <form asp-controller="ClavesPre" asp-action="NuevaClave" id="myForm" role="form" accept-charset="utf-8" method="post" class="form-horizontal">

                <div class="ibox-content">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Clave</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.clave, new { @class = "form-control", @placeholder = "Ingrese la nueva clave presupuestaria" })
                            <span asp-validation-for="clave" class="badge badge-danger"></span>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Organo</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.organo, new { @class = "form-control", @placeholder = "Ingrese el organo administrativo asociado a la clave" })
                            <span asp-validation-for="organo" class="badge badge-danger"></span>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Proyecto</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(model => model.proyecto, new { @class = "form-control", @rows = 3 })
                            <span asp-validation-for="proyecto" class="badge badge-danger"></span>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Año</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.anio, new { @class = "form-control", @placeholder = "Año", @type = "number" })
                            <span asp-validation-for="anio" class="badge badge-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Lider</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.lider, new { @class = "form-control", @placeholder = "Año", @type = "number" })
                            <span asp-validation-for="anio" class="badge badge-danger"></span>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <div>@Html.CheckBoxFor(model => model.activo, new { @class = "i-checks", @id = "activo" }) <label class="control-label"> Activo</label></div>
                        </div>
                    </div>

                </div>

                <div class="ibox-footer">
                    <button class="btn btn-outline btn-success dim" type="submit"><i class="fa fa-floppy-o"></i></button>
                    <button class="btn btn-outline btn-danger dim" type="button" onclick="salir();"><i class="fa fa-sign-out"></i></button>
                </div>

            </form>

        </div>
    </div>
</div>

@section scripts
{
    @*-- css --*@
    <link href="~/css/plugins/iCheck/custom.css" rel="stylesheet" />

    @*-- js --*@

    <script src="~/js/plugins/iCheck/icheck.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });

        function salir() {
            location.href = '@Url.Action("Index", "ClavesPre")';
        }

    </script>

}