@model PoaPlan.Models.ViewModel.UsuarioVM

@{
    Layout = "_LayaoutLogin";
}

<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <div>
            <h5 class="logo-name">SAID</h5>
        </div>
        <h4>Bienvenido a SAID</h4>
        <a id="lnk" href="@Url.Action("Index","Home")"></a>
        <form asp-action="Login" asp-controller="Login" id="Login">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Usuario" asp-for="Nombre">
                <span asp-validation-for="Nombre"></span>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" asp-for="Clave">
                <span asp-validation-for="Clave"></span>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Iniciar Sesión</button>
        </form>
    </div>
</div>

