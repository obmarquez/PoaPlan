@model IEnumerable<avanceComponente>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Mantenimiento de Avance de Componentes - Organo: @ViewBag.elOrgano.organo</h5>
            </div>
            <div class="ibox-content">
                <form method="get" class="form-horizontal" asp-controller="AvanceComponenteEnlace" asp-action="Index">
                    <div class="form-group">

                        <label class="col-sm-2 control-label">Componente</label>
                        <div class="col-sm-10">

                            @Html.DropDownList("elComponente", new SelectList(ViewBag.losComponentes, "idComponente", "componente"), "Elija un componente", new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-sm-1">
                            <button class="btn btn-block btn-outline btn-success btn-xs" type="submit">Buscar</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@if (Model != null)
{

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ene</th>
                    <th>Feb</th>
                    <th>Mar</th>
                    <th>Abr</th>
                    <th>May</th>
                    <th>Jun</th>
                    <th>Jul</th>
                    <th>Ago</th>
                    <th>Sep</th>
                    <th>Oct</th>
                    <th>Nov</th>
                    <th>Dic</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center;">@item.id</td>
                        <td style="text-align:center;">@item.enero_mod | @item.enero_ava</td>
                        <td style="text-align:center;">@item.febrero_mod | @item.febrero_ava</td>
                        <td style="text-align:center;">@item.marzo_mod | @item.marzo_ava</td>
                        <td style="text-align:center;">@item.abril_mod | @item.abril_ava</td>
                        <td style="text-align:center;">@item.mayo_mod | @item.mayo_ava</td>
                        <td style="text-align:center;">@item.junio_mod | @item.junio_ava</td>
                        <td style="text-align:center;">@item.julio_mod | @item.julio_ava</td>
                        <td style="text-align:center;">@item.agosto_mod | @item.agosto_ava</td>
                        <td style="text-align:center;">@item.septiembre_mod | @item.septiembre_ava</td>
                        <td style="text-align:center;">@item.octubre_mod | @item.octubre_ava</td>
                        <td style="text-align:center;">@item.noviembre_mod | @item.noviembre_ava</td>
                        <td style="text-align:center;">@item.diciembre_mod | @item.diciembre_ava</td>
                        <td>
                            @*<p>@Html.ActionLink("Editar", "EditarActividad", new { elAnioC = @ViewBag.elAnio, idComp = item.idIndicador }, htmlAttributes: new { @class = "btn btn-block btn-outline btn-info btn-xs" })</p>*@
                            <p>@Html.ActionLink("Editar", "EditarAvanceComponenteEnlace", new { elIdCompAvaEd = item.id, elIdComp = item.idComponente }, htmlAttributes: new { @class = "btn btn-block btn-outline btn-info btn-xs" })</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}

@section scripts
{
    <script language="javascript">

    $(document).ready(function () {

        $('.dataTables-example').DataTable({
            pageLength: 25,
            responsive: true,

            "order": [[0, "desc"]],

            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy' },
                { extend: 'csv' },
                { extend: 'excel', title: 'ExampleFile' },
                { extend: 'pdf', title: 'ExampleFile' },

                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ]
        });

        $("#elOrgano").change(function () {

            //alert($("#elOrgano").val());

            $("#elComponente").empty();

            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetComponentes", "Actividades")',
                dataType: 'json',
                data: { elIdArea: $("#elOrgano").val() },
                success: function (states) {
                    $.each(states, function (i, state) {
                        $("#elComponente").append('<option value="' + state.idComponente + '">' + state.componente + '</option>');
                    });
                },
                error: function (ex) {
                    alert("Error obteniendo los componentes." + ex);
                }
            });
            return false;

        });

    });

    </script>
}
