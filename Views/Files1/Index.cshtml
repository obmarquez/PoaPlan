@model FileClass

@{
    ViewData["Title"] = "Index";
}

<form asp-controller="Files1" asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <hr />
    <button type="submit">Subir</button>
</form>

@if (Model != null)
{
    <hr />
    <table class="table table-bordered table-striped" cellpadding="0" cellspacing="0" border="1">
        <thead>
            <tr>
                <th>SL</th>
                <th>Nombre Archivo</th>
                <th>Mostrar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(FileClass file in Model.Files)
                {
                <tr>
                    <td>@file.FileID</td>
                    <td>@file.Name</td>
                    <td>
                        @*<a href="../Files1/Index?fileName=@file.Name" style="margin-right:10px;">Actual</a>*@
                        @*<a href="../Files1/PDFViewerNewTab?fileName=@file.Name" target="_blank"> Archivo </a>*@
                        <a href= @Url.Action("PDFViewerNewTab", "Files1", new { fileName = @file.Name }) target="_blank"> Archivo </a>
                    </td>
                </tr>
                }
        </tbody>
    </table>
}

<br /><br />

